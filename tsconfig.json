{
  "extends": "../positron/src/tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vscode"],
    "baseUrl": "./",
    "paths": {
      "positron": ["src/positron.d.ts"],
      "ui-comm": ["src/ui-comm.d.ts"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "temp",
    "**/*.test.ts"
  ]
}